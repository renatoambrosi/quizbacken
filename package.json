{
  "name": "teste-prosperidade-backend-oficial",
  "version": "2.0.0",
  "description": "Backend oficial do Teste de Prosperidade com Checkout Bricks do Mercado Pago conforme documentação oficial",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"No tests configured\" && exit 0",
    "health": "curl http://localhost:3000/health",
    "status": "curl http://localhost:3000/status",
    "mp-health": "curl http://localhost:3000/api/mp-health",
    "logs": "echo \"Verificar logs no Railway Dashboard\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "mercadopago": "^2.0.0",
    "uuid": "^9.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mercadopago",
    "checkout-bricks",
    "payment-brick",
    "status-screen-brick",
    "pix",
    "payment-processing",
    "nodejs",
    "express",
    "webhook",
    "polling",
    "oficial"
  ],
  "author": {
    "name": "Teste de Prosperidade",
    "email": "contato@suellenseragi.com.br",
    "url": "https://www.suellenseragi.com.br"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/renatoambrosi/quizbacken"
  },
  "bugs": {
    "url": "https://github.com/renatoambrosi/quizbacken/issues"
  },
  "homepage": "https://www.suellenseragi.com.br",
  "license": "MIT",
  "private": false,
  "configuration": {
    "mercadopago": {
      "sdk_version": "2.0.0",
      "integration_type": "checkout_bricks",
      "payment_methods": ["credit_card", "debit_card", "pix"],
      "environment": "production"
    },
    "deployment": {
      "platform": "railway",
      "frontend_url": "https://quizfronten.vercel.app",
      "backend_url": "https://quizbacken-production.up.railway.app",
      "result_url": "https://www.suellenseragi.com.br/resultado"
    }
  },
  "directories": {
    "routes": "./routes"
  }
}
